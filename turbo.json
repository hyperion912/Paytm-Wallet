{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build", "db:generate"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"],
      "env": ["DATABASE_URL", "JWT_SECRET", "NEXTAUTH_URL"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "dependsOn": ["^db:generate"],
      "cache": false,
      "persistent": true,
      "env": ["DATABASE_URL"]

    },

  "db:generate": {
    "cache": false
  },
  "db:migrate": {
    "cache": false,
    "persistent": true
  },
  "db:deploy": {
    "cache": false
  }

  }
}
